    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script>
        // Scene setup
        const canvas = document.getElementById('canvas');
        const scene = new THREE.Scene();
        scene.background = new THREE.Color(0x000000);
        scene.fog = new THREE.Fog(0x000000, 10, 50);
        
        const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
        camera.position.set(18, 12, 18);
        camera.lookAt(0, 0, 0);
        
        const renderer = new THREE.WebGLRenderer({ canvas, antialias: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.shadowMap.enabled = true;
        renderer.shadowMap.type = THREE.PCFSoftShadowMap;
        
        // Enhanced lighting
        const ambientLight = new THREE.AmbientLight(0x202020, 0.8);
        scene.add(ambientLight);
        
        const pointLight1 = new THREE.PointLight(0xff0088, 2, 100);
        pointLight1.position.set(10, 10, 10);
        pointLight1.castShadow = true;
        scene.add(pointLight1);
        
        const pointLight2 = new THREE.PointLight(0x00ddff, 1.5, 100);
        pointLight2.position.set(-10, -10, -10);
        scene.add(pointLight2);
        
        const pointLight3 = new THREE.PointLight(0x00ff88, 1.2, 80);
        pointLight3.position.set(0, 15, 0);
        scene.add(pointLight3);
        
        // Golden ratio
        const PHI = 1.618033988749;
        
        // State variables
        let systemPower = 100;
        let rotationSpeed = 1.0;
        let pulseFrequency = 2.4;
        let flowIntensity = 1.0;
        let wireframeMode = false;
        let showDensity = true;
        let showGrid = true;
        let showTorus = true;
        let showEmitters = true;
        let showSpokes = true;
        let showFlowParticles = true;
        let showNode = true;
        let showShield = true;
        const shellVisibility = [true, true, true, true, true, true, true];
        
        // Main Torus Drive
        const torusGeometry = new THREE.TorusGeometry(5, 5 / (PHI * PHI), 48, 100);
        const torusMaterial = new THREE.MeshPhongMaterial({
            color: 0x00ff88,
            transparent: true,
            opacity: 0.4,
            wireframe: false,
            emissive: 0x00ff88,
            emissiveIntensity: 0.5,
            shininess: 100
        });
        const torus = new THREE.Mesh(torusGeometry, torusMaterial);
        torus.castShadow = true;
        torus.receiveShadow = true;
        scene.add(torus);
        
        // Plasma field
        const plasmaGeometry = new THREE.TorusGeometry(5, 5 / (PHI * PHI) * 0.85, 48, 100);
        const plasmaMaterial = new THREE.MeshBasicMaterial({
            color: 0xff0088,
            transparent: true,
            opacity: 0.25,
            wireframe: false
        });
        const plasma = new THREE.Mesh(plasmaGeometry, plasmaMaterial);
        scene.add(plasma);
        
        // 15 Pulse Emitters
        const emitters = [];
        const emitterCount = 15;
        const emitterRadius = 5;
        
        for (let i = 0; i < emitterCount; i++) {
            const angle = (i / emitterCount) * Math.PI * 2;
            const x = Math.cos(angle) * emitterRadius;
            const z = Math.sin(angle) * emitterRadius;
            
            // Main emitter sphere
            const emitterGeometry = new THREE.SphereGeometry(0.2, 24, 24);
            const emitterMaterial = new THREE.MeshPhongMaterial({
                color: 0xff4400,
                emissive: 0xff4400,
                emissiveIntensity: 1.5,
                transparent: true,
                opacity: 0.9
            });
            const emitter = new THREE.Mesh(emitterGeometry, emitterMaterial);
            emitter.position.set(x, 0, z);
            
            // Glow sphere
            const glowGeometry = new THREE.SphereGeometry(0.35, 16, 16);
            const glowMaterial = new THREE.MeshBasicMaterial({
                color: 0xff8800,
                transparent: true,
                opacity: 0.3
            });
            const glow = new THREE.Mesh(glowGeometry, glowMaterial);
            emitter.add(glow);
            
            emitter.userData = {
                angle: angle,
                phase: (i / emitterCount) * Math.PI * 2,
                originalScale: 1,
                index: i
            };
            
            emitters.push(emitter);
            scene.add(emitter);
        }
        
        // Energy Spokes (connecting emitters to center)
        const spokes = [];
        const spokeGroup = new THREE.Group();
        scene.add(spokeGroup);
        
        for (let i = 0; i < emitterCount; i++) {
            const angle = (i / emitterCount) * Math.PI * 2;
            const x = Math.cos(angle) * emitterRadius;
            const z = Math.sin(angle) * emitterRadius;
            
            // Create spoke as a cone (wider at emitter, narrow at center)
            const spokeGeometry = new THREE.CylinderGeometry(0.02, 0.1, emitterRadius, 8);
            const spokeMaterial = new THREE.MeshBasicMaterial({
                color: 0xffaa00,
                transparent: true,
                opacity: 0.6,
                wireframe: false
            });
            const spoke = new THREE.Mesh(spokeGeometry, spokeMaterial);
            
            // Position and rotate spoke to point toward center
            spoke.position.set(x/2, 0, z/2);
            spoke.rotation.z = -angle + Math.PI/2;
            
            spoke.userData = { index: i, baseOpacity: 0.6 };
            spokes.push(spoke);
            spokeGroup.add(spoke);
        }
        
        // Flow Particles (energy flowing along spokes)
        const flowParticles = [];
        const flowParticleGroup = new THREE.Group();
        scene.add(flowParticleGroup);
        
        function createFlowParticle(emitterIndex) {
            const angle = (emitterIndex / emitterCount) * Math.PI * 2;
            const startX = Math.cos(angle) * emitterRadius;
            const startZ = Math.sin(angle) * emitterRadius;
            
            const particleGeometry = new THREE.SphereGeometry(0.08, 8, 8);
            const particleMaterial = new THREE.MeshBasicMaterial({
                color: 0xff6600,
                transparent: true,
                opacity: 0.9
            });
            const particle = new THREE.Mesh(particleGeometry, particleMaterial);
            particle.position.set(startX, 0, startZ);
            
            particle.userData = {
                startX: startX,
                startZ: startZ,
                progress: 0,
                speed: 0.02 + Math.random() * 0.01,
                emitterIndex: emitterIndex
            };
            
            flowParticles.push(particle);
            flowParticleGroup.add(particle);
        }
        
        // Central Node (the wormhole throat with geometric structure)
        const nodeGroup = new THREE.Group();
        
        // Main core
        const nodeCoreGeometry = new THREE.SphereGeometry(0.5, 32, 32);
        const nodeCoreMaterial = new THREE.MeshPhongMaterial({
            color: 0xff0088,
            emissive: 0xff0088,
            emissiveIntensity: 1.2,
            transparent: true,
            opacity: 0.8,
            shininess: 100
        });
        const nodeCore = new THREE.Mesh(nodeCoreGeometry, nodeCoreMaterial);
        nodeGroup.add(nodeCore);
        
        // Inner glow layers
        for (let i = 1; i <= 3; i++) {
            const glowSize = 0.5 + (i * 0.15);
            const glowGeometry = new THREE.SphereGeometry(glowSize, 24, 24);
            const glowMaterial = new THREE.MeshBasicMaterial({
                color: 0xff0088,
                transparent: true,
                opacity: 0.2 / i
            });
            const glowSphere = new THREE.Mesh(glowGeometry, glowMaterial);
            nodeGroup.add(glowSphere);
        }
        
        // Geometric structure rings (Fatou Set visualization)
        for (let i = 0; i < 5; i++) {
            const ringRadius = 0.3 + (i * 0.1);
            const ringGeometry = new THREE.TorusGeometry(ringRadius, 0.02, 8, 32);
            const ringMaterial = new THREE.MeshBasicMaterial({
                color: 0xff4488,
                transparent: true,
                opacity: 0.6
            });
            const ring = new THREE.Mesh(ringGeometry, ringMaterial);
            ring.rotation.x = Math.PI / 2;
            ring.userData = { rotationSpeed: 0.01 * (i + 1) };
            nodeGroup.add(ring);
        }
        
        scene.add(nodeGroup);
        
        // Matryoshka Shield Shells
        const shells = [];
        const shellRadii = [3.5, 3.0, 2.5, 2.0, 1.5, 1.0, 0.5];
        const shellRPMs = [10000, 15000, 20000, 25000, 30000, 35000, 40000];
        const shellColors = [
            0x0088ff, 0x0099ff, 0x00aaff,
            0xff8800, 0xff9900,
            0xff00ff, 0xff44ff
        ];
        
        shellRadii.forEach((radius, i) => {
            const geometry = new THREE.IcosahedronGeometry(radius, 2);
            const material = new THREE.MeshPhongMaterial({
                color: shellColors[i],
                transparent: true,
                opacity: 0.15,
                wireframe: false,
                side: THREE.DoubleSide,
                emissive: shellColors[i],
                emissiveIntensity: 0.2
            });
            const shell = new THREE.Mesh(geometry, material);
            
            const wireframeGeo = new THREE.EdgesGeometry(geometry);
            const wireframeMat = new THREE.LineBasicMaterial({ 
                color: shellColors[i], 
                transparent: true, 
                opacity: 0.4 
            });
            const wireframe = new THREE.LineSegments(wireframeGeo, wireframeMat);
            shell.add(wireframe);
            
            shell.userData = {
                rotationAxis: new THREE.Vector3(
                    Math.random() - 0.5,
                    Math.random() - 0.5,
                    Math.random() - 0.5
                ).normalize(),
                rpm: shellRPMs[i],
                index: i
            };
            
            shells.push(shell);
            scene.add(shell);
        });
        
        // Grid and axes
        const gridHelper = new THREE.GridHelper(30, 30, 0x00ff88, 0x003322);
        gridHelper.position.y = -6;
        scene.add(gridHelper);
        
        const axesHelper = new THREE.AxesHelper(10);
        scene.add(axesHelper);
        
        // Mouse controls
        let isDragging = false;
        let previousMousePosition = { x: 0, y: 0 };
        
        canvas.addEventListener('mousedown', (e) => {
            isDragging = true;
            previousMousePosition = { x: e.clientX, y: e.clientY };
        });
        
        canvas.addEventListener('mousemove', (e) => {
            if (isDragging) {
                const deltaX = e.clientX - previousMousePosition.x;
                const deltaY = e.clientY - previousMousePosition.y;
                
                const rotationSpeed = 0.005;
                const currentPos = camera.position.clone();
                const distance = currentPos.length();
                
                // Rotate around Y axis
                const angleY = deltaX * rotationSpeed;
                currentPos.applyAxisAngle(new THREE.Vector3(0, 1, 0), -angleY);
                
                // Rotate around X axis
                const angleX = deltaY * rotationSpeed;
                const axis = new THREE.Vector3(-currentPos.z, 0, currentPos.x).normalize();
                currentPos.applyAxisAngle(axis, -angleX);
                
                camera.position.copy(currentPos);
                camera.lookAt(0, 0, 0);
                
                previousMousePosition = { x: e.clientX, y: e.clientY };
            }
        });
        
        canvas.addEventListener('mouseup', () => {
            isDragging = false;
        });
        
        canvas.addEventListener('wheel', (e) => {
            e.preventDefault();
            const zoomSpeed = 0.1;
            const direction = e.deltaY > 0 ? 1 : -1;
            const currentDistance = camera.position.length();
            const newDistance = Math.max(5, Math.min(35, currentDistance * (1 + direction * zoomSpeed)));
            camera.position.multiplyScalar(newDistance / currentDistance);
            camera.lookAt(0, 0, 0);
        }, { passive: false });
        
        // UI Controls
        document.getElementById('powerSlider').addEventListener('input', (e) => {
            systemPower = parseFloat(e.target.value);
            document.getElementById('powerValue').textContent = systemPower.toFixed(0);
            document.getElementById('powerBar').style.width = (systemPower / 2) + '%';
        });
        
        document.getElementById('speedSlider').addEventListener('input', (e) => {
            rotationSpeed = parseFloat(e.target.value);
            document.getElementById('speedValue').textContent = rotationSpeed.toFixed(1);
        });
        
        document.getElementById('pulseSlider').addEventListener('input', (e) => {
            pulseFrequency = parseFloat(e.target.value);
            document.getElementById('pulseValue').textContent = pulseFrequency.toFixed(1);
        });
        
        document.getElementById('flowSlider').addEventListener('input', (e) => {
            flowIntensity = parseFloat(e.target.value);
            document.getElementById('flowValue').textContent = flowIntensity.toFixed(1);
        });
        
        document.getElementById('distSlider').addEventListener('input', (e) => {
            const dist = parseFloat(e.target.value);
            const currentPos = camera.position.clone().normalize();
            camera.position.copy(currentPos.multiplyScalar(dist));
            camera.lookAt(0, 0, 0);
            document.getElementById('distValue').textContent = dist;
        });
        
        // Toggle buttons
        document.getElementById('toggleTorus').addEventListener('click', function() {
            showTorus = !showTorus;
            torus.visible = showTorus;
            plasma.visible = showTorus;
            this.classList.toggle('active');
        });
        
        document.getElementById('toggleEmitters').addEventListener('click', function() {
            showEmitters = !showEmitters;
            emitters.forEach(e => e.visible = showEmitters);
            this.classList.toggle('active');
        });
        
        document.getElementById('toggleSpokes').addEventListener('click', function() {
            showSpokes = !showSpokes;
            spokeGroup.visible = showSpokes;
            this.classList.toggle('active');
        });
        
        document.getElementById('toggleFlowParticles').addEventListener('click', function() {
            showFlowParticles = !showFlowParticles;
            flowParticleGroup.visible = showFlowParticles;
            this.classList.toggle('active');
        });
        
        document.getElementById('toggleNode').addEventListener('click', function() {
            showNode = !showNode;
            nodeGroup.visible = showNode;
            this.classList.toggle('active');
        });
        
        document.getElementById('toggleShield').addEventListener('click', function() {
            showShield = !showShield;
            shells.forEach((shell, i) => {
                if (shellVisibility[i]) shell.visible = showShield;
            });
            this.classList.toggle('active');
        });
        
        document.getElementById('toggleDensity').addEventListener('click', function() {
            showDensity = !showDensity;
            this.classList.toggle('active');
        });
        
        document.getElementById('toggleWireframe').addEventListener('click', function() {
            wireframeMode = !wireframeMode;
            torusMaterial.wireframe = wireframeMode;
            this.classList.toggle('active');
        });
        
        document.getElementById('toggleGrid').addEventListener('click', function() {
            showGrid = !showGrid;
            gridHelper.visible = showGrid;
            axesHelper.visible = showGrid;
            this.classList.toggle('active');
        });
        
        document.getElementById('resetCamera').addEventListener('click', () => {
            camera.position.set(18, 12, 18);
            camera.lookAt(0, 0, 0);
            document.getElementById('distSlider').value = 18;
            document.getElementById('distValue').textContent = '18';
        });
        
        // Shell controls
        for (let i = 1; i <= 7; i++) {
            document.getElementById(`shell${i}`).addEventListener('click', function() {
                shellVisibility[i - 1] = !shellVisibility[i - 1];
                shells[i - 1].visible = shellVisibility[i - 1] && showShield;
                this.classList.toggle('active');
            });
        }
        
        // Animation loop
        let frameCount = 0;
        function animate() {
            requestAnimationFrame(animate);
            frameCount++;
            
            const time = Date.now() * 0.001;
            const deltaTime = 1/60;
            const powerFactor = systemPower / 100;
            
            // Rotate torus
            if (showTorus) {
                torus.rotation.y += 0.01 * rotationSpeed * powerFactor;
                plasma.rotation.y += 0.015 * rotationSpeed * powerFactor;
                plasma.rotation.x += 0.005 * rotationSpeed * powerFactor;
                plasmaMaterial.opacity = 0.2 + Math.sin(time * 3) * 0.05;
            }
            
            // Animate emitters with Œ¶-phase
            emitters.forEach((emitter, i) => {
                if (showEmitters) {
                    const pulsePhase = (time * pulseFrequency + emitter.userData.phase) % (Math.PI * 2);
                    const pulseIntensity = (Math.cos(pulsePhase) + 1) / 2;
                    
                    const scale = 1 + pulseIntensity * 0.6 * powerFactor;
                    emitter.scale.set(scale, scale, scale);
                    
                    emitter.material.emissiveIntensity = 1 + pulseIntensity * 1.5 * powerFactor;
                    
                    // Generate flow particles at pulse peaks
                    if (pulseIntensity > 0.9 && Math.random() < 0.15 * flowIntensity && showFlowParticles) {
                        createFlowParticle(i);
                    }
                    
                    // Update emitter color based on energy (thermal gradient)
                    if (showDensity) {
                        const hue = 0.05 - (pulseIntensity * 0.05); // Red to orange
                        emitter.material.color.setHSL(hue, 1, 0.5);
                        emitter.material.emissive.setHSL(hue, 1, 0.5);
                    }
                }
            });
            
            // Animate spokes (pulsing energy flow)
            if (showSpokes) {
                spokes.forEach((spoke, i) => {
                    const phase = (time * pulseFrequency * 2 + (i / emitterCount) * Math.PI * 2) % (Math.PI * 2);
                    const intensity = (Math.sin(phase) + 1) / 2;
                    
                    spoke.material.opacity = (0.3 + intensity * 0.5) * flowIntensity * powerFactor;
                    
                    if (showDensity) {
                        const hue = 0.08 - (intensity * 0.03); // Orange to yellow
                        spoke.material.color.setHSL(hue, 1, 0.5);
                    }
                });
            }
            
            // Update flow particles
            if (showFlowParticles) {
                for (let i = flowParticles.length - 1; i >= 0; i--) {
                    const particle = flowParticles[i];
                    particle.userData.progress += particle.userData.speed * flowIntensity * powerFactor;
                    
                    if (particle.userData.progress >= 1) {
                        flowParticleGroup.remove(particle);
                        flowParticles.splice(i, 1);
                    } else {
                        // Move along spoke toward center
                        const t = particle.userData.progress;
                        const x = particle.userData.startX * (1 - t);
                        const z = particle.userData.startZ * (1 - t);
                        particle.position.set(x, 0, z);
                        
                        // Fade and heat up as approaching center
                        particle.material.opacity = (1 - t) * 0.9;
                        particle.scale.setScalar(1 + t * 0.5);
                        
                        if (showDensity) {
                            const hue = 0.08 - (t * 0.08); // Yellow to red
                            particle.material.color.setHSL(hue, 1, 0.5);
                        }
                    }
                }
            }
            
            // Animate central node
            if (showNode) {
                const nodeScale = 1 + Math.sin(time * pulseFrequency * 1.5) * 0.25 * powerFactor;
                nodeGroup.scale.set(nodeScale, nodeScale, nodeScale);
                
                nodeCoreMaterial.emissiveIntensity = 1 + Math.sin(time * pulseFrequency * 2) * 0.4 * powerFactor;
                
                // Rotate geometric rings
                nodeGroup.children.forEach((child, i) => {
                    if (child.userData.rotationSpeed) {
                        child.rotation.y += child.userData.rotationSpeed * rotationSpeed;
                    }
                });
                
                // Slow rotation of entire node group
                nodeGroup.rotation.y += 0.005 * rotationSpeed;
            }
            
            // Rotate shells
            shells.forEach((shell) => {
                if (shell.visible) {
                    const rpmFactor = shell.userData.rpm / 60000;
                    shell.rotateOnAxis(shell.userData.rotationAxis, rpmFactor * rotationSpeed * powerFactor);
                    shell.rotation.x += Math.sin(time + shell.userData.index) * 0.00015;
                }
            });
            
            // Update stats
            const stability = 95 + Math.sin(time * 2) * 3 + (powerFactor * 5);
            document.getElementById('stabilityValue').textContent = stability.toFixed(1) + '%';
            
            const concentration = Math.floor(25 + Math.sin(time * pulseFrequency) * 5 + (powerFactor * 10));
            document.getElementById('concentrationValue').textContent = concentration + 'x';
            
            const coherence = 96 + Math.sin(time * 3) * 3 + (powerFactor * 4);
            document.getElementById('coherenceValue').textContent = coherence.toFixed(1) + '%';
            
            document.getElementById('flowRateValue').textContent = pulseFrequency.toFixed(1) + ' GHz';
            
            renderer.render(scene, camera);
        }
        
        // Handle resize
        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });
        
        // Start
        animate();
        
        console.log('‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê');
        console.log('ZPE CYMATIC DRIVE - Ultra-Realistic Flow Visualization');
        console.log('‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê');
